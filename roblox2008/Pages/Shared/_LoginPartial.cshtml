@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a id="ctl00_BannerOptionsLoginView_BannerOptions_Anonymous_LoginHyperLink" asp-area="Identity" asp-page="">Hello @User.Identity?.Name!</a>
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
        <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
    </form>
}
else
{
<a id="ctl00_BannerOptionsLoginView_BannerOptions_Anonymous_LoginHyperLink" asp-area="Identity" asp-page="/Account/Login">Login</a>
}